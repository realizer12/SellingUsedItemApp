<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorblack"
        android:padding="10dp"
        android:fontFamily="@font/cookierun_regular"
        android:background="@drawable/bagie_background_with_all_black_line"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="아래 옵션들로 \n프로필 사진을 수정하세요!" />
    <TextView
        android:id="@+id/txt_no_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorblack"
        android:padding="15dp"
        android:background="@drawable/normal_ripple_edffect"
        android:fontFamily="@font/cookierun_regular"
        android:textSize="19sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        android:text="사진 없애기" />

    <TextView
        android:id="@+id/txt_for_goto_gallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorblack"
        android:fontFamily="@font/cookierun_regular"
        android:background="@drawable/normal_ripple_edffect"
        android:textSize="19sp"
        android:padding="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txt_no_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="갤러리에서 가져오기" />

    <TextView
        android:id="@+id/txt_for_cancel_dialog"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/colorblack"
        android:fontFamily="@font/cookierun_regular"
        android:background="@drawable/normal_ripple_edffect"
        android:textSize="19sp"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_for_goto_gallery"
        android:text="취소" />
</androidx.constraintlayout.widget.ConstraintLayout>
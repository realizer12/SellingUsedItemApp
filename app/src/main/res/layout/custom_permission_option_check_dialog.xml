<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/white_background_with_all_black_line">

    <TextView
        android:id="@+id/txt_for_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="320dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:fontFamily="@font/cookierun_regular"
        android:gravity="center"
        android:text="@string/string_for_permission_dialog_title"
        android:textColor="@color/colorblack"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <ImageView
        android:id="@+id/img_for_permission_check_info_gif"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/btn_for_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_for_dialog_title"
        app:srcCompat="@drawable/permission_check_info" />

    <Button
        android:id="@+id/btn_for_cancel"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/bagie_background_with_all_black_line"
        android:fontFamily="@font/cookierun_regular"
        android:text="취소"
        android:textColor="@color/colorblack"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_for_complete"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_for_complete"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/dark_bagie_background_with_all_black_line"
        android:fontFamily="@font/cookierun_regular"
        android:text="권한 설정 가기"
        android:textColor="@color/colorblack"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_for_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>